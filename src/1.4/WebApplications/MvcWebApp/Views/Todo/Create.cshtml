@model MvcWebApp.Models.TodoItem

@{
    ViewData["Title"] = "Создать задачу";
}

<h1>Создать задачу</h1>

<h4>TodoItem</h4>
<hr />
<div>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
